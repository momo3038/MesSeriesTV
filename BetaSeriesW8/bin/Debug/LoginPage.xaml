                <DataTemplate>
                    <Grid>
                        <Grid.Background>
                            <ImageBrush ImageSource="{Binding FondString}"  Stretch="UniformToFill"/>
                        </Grid.Background>
                        <ProgressRing VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,40" Width="75" Height="75" Foreground="{StaticResource BackGroundBS}" IsActive="{Binding FondEnCoursDeTelechargement}"></ProgressRing>
                        <Button x:ConnectionId='20'                     BorderBrush="Transparent"
                                        BorderThickness="0" Content="{Binding Titre}" FontSize="25"
