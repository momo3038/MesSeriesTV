                    <TextBlock Text="&gt; S'inscrire" FontSize="25" Foreground="White" HorizontalAlignment="Left" />
                    <TextBlock Margin="25,0,0,0" TextWrapping="Wrap" Text="Créer votre planning en quelques secondes pour ne plus rien rater !" FontSize="15" Foreground="White" HorizontalAlignment="Left" />
                </StackPanel>
            </Button>

            <Button x:ConnectionId='19' Grid.Column="1" Grid.Row="0"  Style="{StaticResource HomeSeConnecterBtn}" Background="#FF090932" Width="290" Height="200" Margin="0,15,0,0" x:Name="btnRechercheUneSerie" Foreground="White"  HorizontalContentAlignment="Stretch"                                    >
