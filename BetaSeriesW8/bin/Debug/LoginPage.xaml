                                    </Button>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <ProgressRing BorderThickness="0" VerticalAlignment="Bottom" Margin="24,0,20,0" Grid.RowSpan="2" Foreground="White" MinHeight="40" Grid.Column="1" x:Name="progress1Snapped" IsActive="false" Visibility="Collapsed" Width="50" Height="50" />
