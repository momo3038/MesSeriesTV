        <Popup Name="popupConnexionSnapped" IsOpen="False" Width="300" Height="200"  >
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Grid  Width="300">
                <Rectangle Fill="#FF143451" Opacity="1">
                </Rectangle>
                <StackPanel Margin="30" Width="Auto" Orientation="Vertical">
                    <Grid Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
