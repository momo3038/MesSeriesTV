        <callisto:CustomDialog x:FieldModifier="public" x:Name="popupInscription"  Title="S'inscrire sur Mes Séries TV" Background="#FFDC6A0A" BackButtonVisibility="Visible">
            <StackPanel Margin="20" Orientation="Vertical" x:Name="gridInscription">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="15" Grid.ColumnSpan="2" Grid.Row="0" Text="Indiquez un nom d'utilisateur, un e-mail valide ainsi que le mot de passe que vous souhaitez pour créer un compte sur Mes Séries TV. Ajouter ensuite vos Séries favorites et obtenez en quelques clics votre planning pour ne rien manquer !" TextTrimming="WordEllipsis" ScrollViewer.HorizontalScrollBarVisibility="Hidden" TextWrapping="Wrap" HorizontalAlignment="Left" FlowDirection="LeftToRight" />
                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1">
                        <TextBlock Margin="0,15,0,0" FontSize="22" Foreground="White" Text="Nom d'utilisateur" />
                        <TextBox Height="50"  BorderThickness="0" x:Name="nomUtilisateur" FontSize="16" Padding="12" />
                        <TextBlock Margin="0,15,0,0" FontSize="22" Foreground="White" Text="Adresse e-mail" />
                        <TextBox Height="50"  BorderThickness="0" x:Name="adresseMail" FontSize="16" Padding="12" />
                        <TextBlock Margin="0,15,0,0" Text="Mot de passe" FontSize="22" Foreground="White" />
                        <PasswordBox FontSize="16" Padding="12" Height="50" x:Name="mdpInscription" />
                        <TextBlock Margin="0,15,0,0" Text="Confirmation mot de passe" FontSize="22" Foreground="White" />
                        <PasswordBox FontSize="16" Padding="12" Height="50" x:Name="ConfirmationMdp" />
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0" Grid.Column="0" Grid.Row="2" Orientation="Horizontal" >
                        <Border Margin="0" x:Name="stkBtnInscriptionVal"  BorderBrush="AliceBlue" BorderThickness="2" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" >
                            <Button x:ConnectionId='22' x:Name="btnSinscrire" Width="180" Height="50" BorderThickness="0" Visibility="Visible"                            >
                                <TextBlock Text="Valider" />
                            </Button>
                        </Border>
                        <Border  x:Name="stkBtnInscriptionAnn"  Margin="90,0,0,0"   BorderBrush="AliceBlue" BorderThickness="2" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
                            <Button x:ConnectionId='21' Width="180" x:Name="btnAnnulerInscription" Height="50" BorderThickness="0" Visibility="Visible"                            >
                                <TextBlock Text="Annuler" />
                            </Button>
                        </Border>
                        <ProgressRing BorderThickness="0" VerticalAlignment="Bottom" Margin="24,0,20,0" Grid.RowSpan="3" Foreground="White" MinHeight="40" Grid.Column="1" x:Name="progressInscription" IsActive="false" Visibility="Visible" Width="50" Height="50" />
                    </StackPanel>
                </Grid>
                <TextBlock Margin="0,10,0,0" TextWrapping="Wrap" x:Name="erreurInscription" Visibility="Collapsed" Text="{Binding ErreurInscription}" FontSize="22" HorizontalAlignment="Right" Foreground="#FFBF0C0C" />
            </StackPanel>
        </callisto:CustomDialog>
