            </Button>

            <Button x:ConnectionId='18' Grid.Column="0" Grid.Row="1" Style="{StaticResource HomeSeConnecterBtn}" Background="Orange" Width="250" Height="200" Margin="0,15,0,0" x:Name="btnSincrire" Foreground="White"  HorizontalContentAlignment="Stretch"                           >
