            <Button x:ConnectionId='17' Grid.Column="0" Grid.Row="0" Style="{StaticResource HomeSeConnecterBtn}" Background="#FF537813" Width="250" Height="200" Margin="0,15,0,0" x:Name="blocSeConnecter" Foreground="White"  HorizontalContentAlignment="Stretch"                              RenderTransformOrigin="0.5,0.5" >
