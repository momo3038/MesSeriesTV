                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal" Width="Auto">
                                <Border Margin="0,0,34,0" x:Name="btnSeConnecterSnapped"  BorderBrush="AliceBlue" BorderThickness="2" Height="50" VerticalAlignment="Bottom" >
                                    <Button x:ConnectionId='24' BorderBrush="AliceBlue" Height="50" BorderThickness="0" Visibility="Visible"                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"   >
                                        <TextBlock Text="Se connecter" />
                                    </Button>
                                </Border>
                                <Border HorizontalAlignment="Right" Width="Auto" x:Name="btnAnnulerSnapped"  BorderBrush="AliceBlue" BorderThickness="2" Height="50" VerticalAlignment="Bottom" >
