        <callisto:CustomDialog x:FieldModifier="public" x:Name="popupConnexion"  Title="Se connecter" Background="#FF537813" BackButtonVisibility="Visible">
            <StackPanel Margin="30" Orientation="Vertical">
                <Grid Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Column="0" Width="300">
                        <TextBlock x:Name="identifiantConnexion" FontSize="22" Foreground="White" Text="Identifiant" />
                        <TextBox Height="50"  BorderThickness="0" x:Name="login" FontSize="16" Padding="12" />
                        <TextBlock Margin="0,15,0,0" Text="Mot de passe" FontSize="22" Foreground="White" />
                        <PasswordBox FontSize="16" Padding="12" Height="50" x:Name="mdp" />
                    </StackPanel>
                    <Border Margin="10,0,0,0" Grid.Column="1" x:Name="btnSeConnecter"  BorderBrush="AliceBlue" BorderThickness="2" Height="50" VerticalAlignment="Bottom" >
                        <Button x:ConnectionId='25' BorderBrush="AliceBlue" Height="50" BorderThickness="0" Visibility="Visible"                      HorizontalContentAlignment="Center" VerticalContentAlignment="Center"   >
                            <TextBlock Text="Se connecter" />
                        </Button>
                    </Border>
                    <ProgressRing BorderThickness="0" VerticalAlignment="Bottom" Margin="24,0,20,0" Grid.RowSpan="2" Foreground="White" MinHeight="40" Grid.Column="1" x:Name="progress1" IsActive="true" Visibility="Collapsed" Width="50" Height="50" />
                </Grid>
                <TextBlock Margin="0,10,0,0" TextWrapping="Wrap" FontSize="18" x:Name="erreurLogin" Visibility="Collapsed" Text="{Binding ErreurLogin}" HorizontalAlignment="Center" Foreground="#FFBF0C0C" />
            </StackPanel>
        </callisto:CustomDialog>
